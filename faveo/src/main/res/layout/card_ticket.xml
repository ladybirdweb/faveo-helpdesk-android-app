        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="-2dp"
                android:alpha=".7"
                android:background="@drawable/rectangle3"
                android:backgroundTint="@color/grey_200">

                <ImageView
                    android:id="@+id/priority_view"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignBottom="@+id/priority_viewText"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/icons8newmoon24" />

                <TextView
                    android:id="@+id/priority_viewText"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="3dp"
                    android:paddingLeft="2dp"
                    android:backgroundTint="@color/grey_200"
                    android:fontFamily="@font/hintedlainesansregular"
                    android:gravity="left"
                    android:text="Low"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>


            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="235dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/icons8newmoon24"
                android:tint="@color/grey_500" />

            <TextView
                android:id="@+id/textViewDepartmentName"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="0dp"
                android:alpha=".7"
                android:background="@drawable/rectangle3"
                android:backgroundTint="@color/grey_200"
                android:fontFamily="@font/hintedlainesansregular"
                android:gravity="center"
                android:maxLines="1"
                android:text="Support"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="96dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/icons8newmoon24"
                android:tint="@color/grey_500" />

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewagentName"
                android:layout_marginLeft="262dp"
                android:layout_marginTop="-2dp"
                android:alpha=".7"
                android:background="@drawable/rectangle3"
                android:backgroundTint="@color/grey_200">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignBottom="@+id/agentassigned"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_person_outline_black_24dp" />


                <TextView
                    android:id="@+id/agentassigned"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rectangle3"
                    android:backgroundTint="@color/grey_200"
                    android:fontFamily="@font/hintedlainesansregular"
                    android:singleLine="true"
                    android:gravity="left"
                    android:text="Unassigned"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageView_default_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textView_ticket_time"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-69dp"
            android:layout_toEndOf="@+id/textView_ticket_id"
            android:layout_toRightOf="@+id/textView_ticket_id"
            android:backgroundTint="@color/faveo"
            android:src="@drawable/default_pic"
            android:transitionName="@string/blue_name"
            android:visibility="visible" />


        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/textView_ticket_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textView_ticket_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="84dp"
            android:alpha=".50"
            android:fontFamily="@font/hintedlainesansregular"
            android:maxLines="1"
            android:text="@string/dummy_date"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/overdue_view"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_client_name"
            android:layout_alignParentEnd="true"
            android:alpha=".8"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff6666"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@string/overdue"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/duetoday"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_client_name"
            android:layout_alignParentEnd="true"
            android:alpha=".8"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff9933"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@string/due_today"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/countthread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_ticket_subject"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="23dp"
            android:layout_toEndOf="@+id/textView_ticket_number"
            android:text="(2)"
            android:textColor="#606060"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/source"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/textView_ticket_number"
            android:layout_alignTop="@+id/textView_client_name"
            android:src="@drawable/mail"
            android:visibility="visible" />


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ticket_id"
            android:layout_toEndOf="@+id/textView_ticket_id"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView_ticket_subject"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="48dp"
            android:alpha=".2"
            android:background="@color/grey_500" />

    </RelativeLayout>

</android.support.v7.widget.CardView>