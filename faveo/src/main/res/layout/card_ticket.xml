        <TextView
            android:id="@+id/textView_ticket_subject"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ticket_number"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="33dp"
            android:ellipsize="end"
            android:fontFamily="@font/hintedlainesansregular"
            android:maxLines="1"
            android:alpha=".7"
            android:text="Using full width cards"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_client_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ticket_number"
            android:layout_alignTop="@+id/textView_ticket_number"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-58dp"
            android:alpha=".68"
            android:ellipsize="end"
            android:fontFamily="@font/hintedlainesansregular"
            android:maxLines="1"
            android:text="Matthias Robbers"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/selectedTicket"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle"
            android:visibility="gone"
            android:src="@drawable/ic_done_white_24dp"/>


