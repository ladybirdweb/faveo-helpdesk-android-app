<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            tools:context="co.helpdesk.faveo.frontend.activities.ClientDetailActivity">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="?attr/colorPrimary" >

                <TextView
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/blue"
                app:tabMode="fixed"
                app:tabGravity="fill"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

        </LinearLayout>

        <View
            android:id="@+id/overlay"
            android:visibility="invisible"
            android:clickable="true"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <io.codetail.widget.RevealLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:visibility="gone"
                android:background="@color/grey_200"
                android:clickable="true"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:orientation="vertical"
                android:id="@+id/reveal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/section_internal_note"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Internal note"
                        android:textStyle="bold"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="MESSAGE"
                        android:textStyle="bold"
                        android:alpha="0.3"/>

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_internal_note"
                        android:background="@drawable/edittext_modified_states"
                        android:textSize="14sp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:maxLines="1"
                        android:imeOptions="actionNext" />

                    <Button
                        android:id="@+id/button_create"
                        android:textAllCaps="false"
                        android:background="@color/blue_300"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="12dp"
                        android:text="Create"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/section_reply"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Reply"
                        android:textStyle="bold"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="CC"
                        android:textStyle="bold"
                        android:alpha="0.3"/>

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_cc"
                        android:background="@drawable/edittext_modified_states"
                        android:textSize="14sp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext" />


                    <TextView
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="MESSAGE"
                        android:textStyle="bold"
                        android:alpha="0.3"/>

                    <EditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_reply_message"
                        android:background="@drawable/edittext_modified_states"
                        android:textSize="14sp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:maxLines="1"
                        android:imeOptions="actionNext" />

                    <Button
                        android:id="@+id/button_send"
                        android:textAllCaps="false"
                        android:background="@color/blue_300"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="12dp"
                        android:text="Send"/>

                </LinearLayout>

            </LinearLayout>

        </io.codetail.widget.RevealLinearLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/add"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/grey_200" />

</android.support.design.widget.CoordinatorLayout>